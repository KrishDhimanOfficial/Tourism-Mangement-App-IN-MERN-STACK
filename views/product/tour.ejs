<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Dashboard</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <%- include('../partials/header') %>
</head>

<body>

    <!-- ======= Header ======= -->
    <%- include('../partials/navbar') %>
        <!-- End Header -->

        <!-- ======= Sidebar ======= -->
        <%- include('../partials/sidebar') %>
            <!-- End Sidebar-->

            <main id="main" class="main">

                <div class="pagetitle">
                    <h1>Dashboard</h1>
                    <nav>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                            <li class="breadcrumb-item">Tour</li>
                        </ol>
                    </nav>
                </div>
                <!-- End Page Title -->

                <section class="section dashboard">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Tour</h5>
                                    <form id="submitForm" class="row g-3" enctype="multipart/form-data">
                                        <input type="hidden" id="updateID">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="col-12 mb-2">
                                                    <label for="title" class="form-label">Title</label>
                                                    <input type="text" name="title" class="form-control"
                                                        id="title">
                                                </div>
                                                <div class="col-12 mb-2">
                                                    <label for="slug" class="form-label">Slug</label>
                                                    <input type="text" name="slug" class="form-control"
                                                        id="slug">
                                                </div>
                                                <div class="col-12 mb-2">
                                                    <label for="product_category_id" class="form-label">Category</label>
                                                    <select id="product_category_id" class="form-select" name="product_category_id" aria-label="Default select example">
                                                        <option selected disabled>Select Category</option>
                                                        <% tour_categories?.forEach(category=> { %>
                                                            <option value="<%= category._id %>">
                                                                <%= category.category_name %>
                                                            </option>
                                                            <% }) %>
                                                    </select>
                                                </div>
                                                <div class="col-12 mb-2">
                                                    <label for="product_location_id" class="form-label">Location</label>
                                                    <select id="product_location_id" class="form-select" name="product_location_id" aria-label="Default select example">
                                                        <option selected disabled>Select Location</option>
                                                        <% tour_locations?.forEach(location=> { %>
                                                            <option value="<%= location._id %>">
                                                                <%= location.location_name %>
                                                            </option>
                                                            <% }) %>
                                                    </select>
                                                </div>
                                                <div class="col-12 mb-2">
                                                    <label for="category_img" class="form-label">Image</label>
                                                    <input type="file" name="featured_image" class="form-control"
                                                        id="Input_img">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="d-flex flex-column p-3">
                                                    <label for="preview_featured_img"
                                                        class="form-label fw-bold mx-auto"> Preview
                                                        Image</label>
                                                    <img src="/assets/images/upload_area.png" id="preview_featured_img"
                                                        style="height: 300px;" alt="upload_area_img"
                                                        class="img-fluid object-fit-contain">
                                                </div>
                                            </div>
                                            <div class="col-12 mt-3">
                                                <div class="card">
                                                    <div class="card-body pt-3">
                                                        <h5 class="form-label">Description</h5>
                                                        <div class="quill-editor-full" name="description">
                                                            <p>Hello World!</p>
                                                            <p>This is Quill <strong>full</strong> editor</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-flex gap-2 align-items-center justify-content-center">
                                                <%- include('../partials/formLoader') %>
                                                    <button type="submit"
                                                        class="btn btn-primary submitbtn">Submit</button>
                                                    <button type="reset" class="btn btn-secondary reset">Reset</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">All Product</h5>
                                    <!-- Table with stripped rows -->
